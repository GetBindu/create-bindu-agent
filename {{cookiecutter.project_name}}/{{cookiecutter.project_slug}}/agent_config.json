{
    "author": "{{ cookiecutter.email }}",
    "name": "{{ cookiecutter.project_name }}",
    "description": "{{ cookiecutter.project_description }}",
    "version": "{{ cookiecutter._agent_version }}",
    "recreate_keys": {{ "true" if cookiecutter._recreate_keys == "y" else "false" }},
    {% if cookiecutter.include_example_skills == "y" %}
    "skills": [
      {% set skill_list = cookiecutter.skill_names.split(',') %}
      {% for skill in skill_list %}
        "skills/{{ skill.strip() }}"{% if not loop.last %},{% endif %}
      {% endfor %}
    ],
    {% else %}
    "skills": [],
    {% endif %}
    "capabilities": {
    },
    {% if cookiecutter._enable_execution_cost == "y" %}
    "execution_cost": {
        "amount": "$0.0001",
        "token": "USDC",
        "network": "base-sepolia",
        "pay_to_address": "0x0000000000000000000000000000000000000000",
        "protected_methods": [
            "message/send"
        ]
    },
    {% endif %}

    "agent_trust": "low",
    "debug_mode": true,
    "debug_level": 2,
    {% if cookiecutter.auth_provider != "none" %}
    "auth": {
        "enabled": true,
        "provider": "{{ cookiecutter.auth_provider }}",
        "domain": "dev-tlzrol0zsxw40ujx.us.auth0.com",
        "audience": "https://dev-tlzrol0zsxw40ujx.us.auth0.com/api/v2/",
        "algorithms": ["RS256"],
        "issuer": "https://dev-tlzrol0zsxw40ujx.us.auth0.com/",
        "jwks_uri": "https://dev-tlzrol0zsxw40ujx.us.auth0.com/.well-known/jwks.json",
        "require_permissions": false,
        "public_endpoints": [
            "/health",
            "/.well-known/*",
            "/did/resolve*",
            "/agent/info",
            "/agent/skills",
            "/agent/skills/*"
        ],
        "permissions": {
            "message/send": ["agent:write"],
            "tasks/get": ["agent:read"],
            "tasks/cancel": ["agent:write"],
            "tasks/list": ["agent:read"],
            "contexts/list": ["agent:read"],
            "tasks/feedback": ["agent:write"]
        }
    },
    {% endif %}
    "deployment": {
        "url": "http://{{ cookiecutter._deployment_host }}:{{ cookiecutter._deployment_port }}",
        "expose": true,
        "protocol_version": "1.0.0",
        "proxy_urls": ["{{ cookiecutter._deployment_host }}"],
        "cors_origins": ["*"]
    },
    "num_history_sessions": 5,
    "environment_variables": [
      {
        "key": "OPENROUTER_API_KEY",
        "description": "OpenRouter API key for LLM calls",
        "required": true
      },
      {
        "key": "MEM0_API_KEY",
        "description": "Mem0 API key for memory operations",
        "required": true
      }
    ]
  }
