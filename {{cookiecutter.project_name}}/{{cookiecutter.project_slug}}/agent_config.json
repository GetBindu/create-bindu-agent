{
    "author": "{{ cookiecutter.email }}",
    "name": "{{ cookiecutter.project_name }}",
    "description": "{{ cookiecutter.project_description }}",
    "version": "{{ cookiecutter._agent_version }}",
    "recreate_keys": {{ "true" if cookiecutter._recreate_keys == "y" else "false" }},
    {% if cookiecutter.include_example_skills == "y" %}
    "skills": [
      {% set skill_list = cookiecutter.skill_names.split(',') %}
      {% for skill in skill_list %}
        "skills/{{ skill.strip() }}"{% if not loop.last %},{% endif %}
      {% endfor %}
    ],
    {% else %}
    "skills": [],
    {% endif %}
    "capabilities": {
    },
    {% if cookiecutter._enable_execution_cost == "y" %}
    "execution_cost": {
        "amount": "$0.0001",
        "token": "USDC",
        "network": "base-sepolia",
        "pay_to_address": "0x0000000000000000000000000000000000000000",
        "protected_methods": [
            "message/send"
        ]
    },
    {% endif %}

    "agent_trust": "low",
    "debug_mode": true,
    "debug_level": 2,
    {% if cookiecutter.auth_provider != "none" %}
    "auth": {
        "enabled": true,
        "provider": "{{ cookiecutter.auth_provider }}",
        "domain": "dev-tlzrol0zsxw40ujx.us.auth0.com",
        "audience": "https://dev-tlzrol0zsxw40ujx.us.auth0.com/api/v2/",
        "algorithms": ["RS256"],
        "issuer": "https://dev-tlzrol0zsxw40ujx.us.auth0.com/",
        "jwks_uri": "https://dev-tlzrol0zsxw40ujx.us.auth0.com/.well-known/jwks.json",
        "require_permissions": false,
        "public_endpoints": [
            "/health",
            "/.well-known/*",
            "/did/resolve*",
            "/agent/info",
            "/agent/skills",
            "/agent/skills/*"
        ],
        "permissions": {
            "message/send": ["agent:write"],
            "tasks/get": ["agent:read"],
            "tasks/cancel": ["agent:write"],
            "tasks/list": ["agent:read"],
            "contexts/list": ["agent:read"],
            "tasks/feedback": ["agent:write"]
        }
    },
    {% endif %}
    "deployment": {
        "url": "http://{{ cookiecutter._deployment_host }}:{{ cookiecutter._deployment_port }}",
        "expose": true,
        "protocol_version": "1.0.0",
        "proxy_urls": ["{{ cookiecutter._deployment_host }}"],
        "cors_origins": ["*"]
    },
    "storage": {
      "type": "{{ cookiecutter._storage_type }}"
    },
    "scheduler": {
      "type": "{{ cookiecutter._scheduler_type }}"
    },

    {% if cookiecutter.observability_provider != "none" %}
    "oltp_endpoint": [
      {% if cookiecutter.observability_provider == "jaeger" %}"http://jaeger:4318/v1/traces"{% endif %}
      {% if cookiecutter.observability_provider == "phoenix" %}"http://phoenix:6006/v1/traces"{% endif %}
      {% if cookiecutter.observability_provider == "langfuse" %}"http://langfuse:3000/v1/traces"{% endif %}
    ],
    "oltp_service_name": "{{ cookiecutter.project_slug }}",
    "oltp_verbose_logging": true,
    "oltp_service_version": "1.0.0",
    "oltp_deployment_environment": "production",
    "oltp_batch_max_queue_size": 2048,
    "oltp_batch_schedule_delay_millis": 5000,
    "oltp_batch_max_export_batch_size": 512,
    "oltp_batch_export_timeout_millis": 30000,
    "llm_observability": {
      "enabled": true,
      "provider": "{{ cookiecutter.observability_provider }}",
      "endpoint": "{% if cookiecutter.observability_provider == 'phoenix' %}http://phoenix:6006{% elif cookiecutter.observability_provider == 'langfuse' %}http://langfuse:3000{% else %}http://jaeger:4318{% endif %}"
    },
    {% endif %}
    "num_history_sessions": 5
  }
